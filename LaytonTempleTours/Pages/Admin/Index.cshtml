@page
@model LaytonTempleTours.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<!-- Masthead-->
<header class="masthead-small">
    <div class="container">
        <div class="masthead-small-heading text-uppercase">Admin</div>
        <div class="masthead-small-subheading">View and Edit Appointments Below</div>
    </div>
</header>

<table class="table table-sm table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Size</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Time</th>
        <th>Options</th>
    </tr>
    @foreach(var app in Model.Appointments)
    {
        <tr>
            <td>@app.ID</td>
            <td>@app.Name</td>
            <td>@app.Size</td>
            <td>@app.Email</td>
            <td>@app.Phone</td>
            <td>@app.Time</td>

            <td>
                <a class="btn btn-primary" asp-page="edit" asp-route-id="@app.ID">Edit</a>
                <a class="btn btn-primary" asp-page="Index" asp-page-handler="Delete" asp-route-id="@app.ID"
                   onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>
    }
</table>

